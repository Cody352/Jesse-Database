<%- include('../partials/header'); %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit a Client</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/clients/<%=clients._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="clients[clientName]"
            placeholder=" Client Name"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="clients[clientAddress]"
            placeholder="Client Address"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="date"
            name="clients[workDate]"
            placeholder="Work Date"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            name="clients[invoiceAmount]"
            placeholder="Invoice Amount"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="clients[paymentReceived]"
            placeholder="Payment Received"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            name="clients[telno]"
            placeholder="Telephone Number"
          />
        </div>

        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="clients[product]"
            placeholder="Product"
          />
        </div>
        <div>
          <input class="btn btn-primary" type="submit" value="Submit" />
        </div>
        <p></p>
      </form>
      <a class="btn btn-primary" href="/clients" role="button">Home</a>
    </div>
  </div>
</div>
<%- include('../partials/footer'); %>
